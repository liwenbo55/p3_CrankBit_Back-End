{
  "name": "allgood-backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "start:node": "node dist/app.js",
    "start:pm2": "pm2 start dist/app.js",
    "stop:pm2": "pm2 stop dist/app.js",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist",
    "lint": "npm run prettier:f && npm run lint:f",
    "prettier:f": "prettier --write .",
    "lint:f": "eslint --ext .ts, src/ --fix --no-cache",
    "prepare": "husky install",
    "postinstall": "husky install",
    "pre-commit": "npx --no-install lint-staged"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.1.3",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.17",
    "express-rate-limit": "^6.7.0",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^20.3.2",
    "@types/nodemailer": "^6.4.8",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  },
  "nodemonConfig": {
    "exec": "ts-node src/app.ts",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write .",
      "eslint --ext .ts, src/ --fix --no-cache",
      "git add ."
    ],
    "*.{json,md,html}": [
      "prettier --write .",
      "git add ."
    ]
  },
  "engines": {
    "node": "^18.0.0"
  }
}
